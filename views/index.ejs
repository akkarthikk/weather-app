<%- include("partials/header.ejs") -%>
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Weather-App | <% if (location) { %><%=location %> <% } %></title>
    <link rel="stylesheet" href="styles/main.css">
    <link rel="icon" href="images/cloudy.png" type="image/x-icon">
    <link href="https://fonts.cdnfonts.com/css/samsungone" rel="stylesheet">
    <!-- <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script> -->
</head>
<body>
    <center><h2>Weather Application</h2</center>
    <div class="query1">
        <form action="/get">
        <div class="input-group mb-3">
                <input type="text" class="form-control" placeholder="Enter a city name for weather Updates" aria-label="Enter a city for weather Updates"  name="city" aria-describedby="button-addon2"required style="min-width:220px;" >
                <button class="btn btn-outline-secondary" type="submit" id="button-addon2"><img src="images/cloud.svg"></button>
        </div>
        
        <% if (errorMessage) { %>
            <p style="color: red;font-size:15px;"><%= errorMessage %>.Try Another City</p>
        <% } %>
    </form>
    </div>
    <div class="body1">
        <div class="container12">
            <div class="Info1">
                <% if (location) { %>
                <span id="location1"><%=location %>&nbsp; <img src="images/location.svg"draggable="false"></img><date style=" font-weight: 100;"><%= date %></date></span><% } %>
                <% if (temperature) { %>
                <span id="temperature1"><%= temperature %>&nbsp;<span id="tt1"> C </span><% } %>
                   <% if (iconcode) { %>
                    <div class="img1">
                        <img src="<%= iconcode %>"draggable="false"alt="Weather icon" width="60px" height="60px"></img><br>
                    </div><% } %>
                </span>
                 <% if (description) { %><% } %>
                <span id="status1"><%= description %></span>
            </div>
            <div class="Info1"> 
                <!-- <span id="minmax"><%= min %><sup>o</sup>/&nbsp;<%= min %><sup>o</sup></span> -->
                  <% if (humidity) { %>
                <span id="minmax1">Feels like <%= feel %> <img id="humid1" src="images/drop.svg"draggable="false"></img>:&nbsp;<%= humidity %>%</span>
                <span id="minmaxq1">
                    <img src="images/sunrise.svg"draggable="false"></img>&nbsp;:&nbsp;<%= sunrise %>
                    <div id="wind1">
                         <img src="images/sunset.svg"draggable="false">
                    </div>&nbsp;:&nbsp;<%= sunset %><br>
                </span>
                <span class="ist1">
                    * Sunrise and sunset timings are according to Indian Standard Time.*
                </span>
                <% } %>
            </div>
        </div>
    </div>
</body>
</html>
<%- include("partials/footer.ejs") -%>